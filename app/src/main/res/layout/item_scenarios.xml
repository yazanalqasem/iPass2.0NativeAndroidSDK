    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_18sdp"
        android:layout_margin="@dimen/_2sdp"
        android:background="@drawable/bg_scenario">


        <TextView
            android:id="@+id/tvFullProcess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/full_processing"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvdescreption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/ivImage"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="@string/processing_scenario_for_obtaining_all_document_data"
            android:layout_below="@id/tvFullProcess"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:src="@drawable/full2" />

    </RelativeLayout>

    <!--</androidx.cardview.widget.CardView>-->

</LinearLayout>
